<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.lbhcustomview.dropindicator.DropindicatorActivity"
    android:orientation="vertical"
    ><com.example.lbhlibrary.customview.dropindicator.DropViewPager
    android:id="@+id/mViewPager"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_above="@+id/circleIndicator"
    android:layout_alignParentTop="true">
</com.example.lbhlibrary.customview.dropindicator.DropViewPager>

    <com.example.lbhlibrary.customview.dropindicator.DropIndicator
        android:id="@+id/circleIndicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:circle_color="@android:color/darker_gray"
        app:click_color="#fafafa"
        app:color1="#FCC04D"
        app:color2="#00C3E2"
        app:color3="#FE626D"
        app:color4="#966ACF"
        app:duration="800"
        app:radius="14dp"
        app:scale="0.5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notice" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msg" />

    </com.example.lbhlibrary.customview.dropindicator.DropIndicator>



</LinearLayout>
